<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">


    <ImageView
        android:id="@+id/tipping_warning_triangle_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@null"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/tipping_warning_triangle_icon" />

    <TextView
        android:id="@+id/logout_warning_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="sans-serif-medium"
        android:lineSpacingExtra="4sp"
        android:text="@string/logged_out_of_custodian"
        android:textColor="#1D1F25"
        app:layout_constraintStart_toEndOf="@+id/tipping_warning_triangle_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/logout_warning_text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="2sp"
        android:text="@string/logged_out_of_custodian_description"
        android:textColor="#1D1F25"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/logout_warning_text"
        app:layout_constraintTop_toBottomOf="@+id/logout_warning_text" />
</merge>